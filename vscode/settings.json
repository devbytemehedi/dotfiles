{
  //! Workbench settings
  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.labelFormat": "short",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.enablePreview": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "top",
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Tokyo Night Storm",
  // "workbench.preferredLightColorTheme": "ClearView Dark Theme",
  // "workbench.preferredDarkColorTheme": "Tokyo Night Storm",

  //! Window settings
  // "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",

  //! Explorer settings
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  //! Files settings
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "{activeEditorLanguage}",
  "files.associations": {"*.css": "tailwindcss"},

  //! Editor settings
  "editor.tabSize": 2,
  "editor.fontSize": 17,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.glyphMargin": false,
  "editor.linkedEditing": true,
  "editor.fontLigatures": true,
  "editor.mouseWheelZoom": true,
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.detectIndentation": false,
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.lineNumbers": "interval",
  "editor.snippetSuggestions": "bottom",
  "editor.suggestSelection": "first",
  "editor.guides.bracketPairs": false,
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.localityBonus": true,
  "editor.renderLineHighlight": "all",
  "editor.scrollbar.horizontal": "hidden",
  "editor.mouseWheelScrollSensitivity": 2,
  "editor.renderControlCharacters": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.accessibilitySupport": "off",
  "editor.hover.enabled": true,
  "editor.hover.delay": 1500,
  "editor.guides.indentation": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.insertSpaces": true,
  "editor.inlineSuggest.enabled": true,
  "breadcrumbs.enabled": false,
  "editor.fontFamily": "MartianMono Nerd Font Mono",

  // "editor.fontFamily": "GoMono Nerd Font",
  // "editor.fontFamily": "JetBrainsMono Nerd Font",
  // "editor.fontFamily": "Terminess Nerd Font",
  // "editor.fontFamily": "SpaceMono Nerd Font",
  // "editor.fontFamily": "OperatorMono Nerd Font",
  // "editor.fontFamily": "Operator Mono Lig",

  //! Terminal settings
  "terminal.integrated.env.windows": {},
  // "terminal.integrated.cursorStyleInactive": "underline",
  // "terminal.integrated.cursorBlinking": true,
  // "terminal.integrated.copyOnSelection": true,
  // "terminal.integrated.defaultProfile.windows": "Git Bash",
  // "terminal.integrated.cursorStyle": "underline",
  // "terminal.integrated.fontFamily": "GoMono Nerd Font",

  //! Git settings
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  //! GitHub Copilot settings
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "typescript": true
  },
  "github.copilot.editor.enableAutoCompletions": true,

  //! Code Spell Checker settings
  "cSpell.enabled": true,
  "cSpell.customDictionaries": {
    "project-words": {
      "name": "mh-codewords",
      "path": "${workspaceRoot}/mh-codewords.txt",
      "description": "Personal Coding Words",
      "addWords": true
    }
  },

  //! Prettier settings
  "prettier.printWidth": 80,
  "prettier.bracketSpacing": false,

  //! Material Icon Theme settings
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.folders.color": "#6273a6",

  //! Security settings
  "security.workspace.trust.untrustedFiles": "open",

  // !Telemetry settings
  "telemetry.telemetryLevel": "off",

  //! colorize settings
  "colorize.include": [".tsx", ".jsx", ".ts", ".js"],
  "colorize.languages": [
    "css",
    "sass",
    "scss",
    "less",
    "postcss",
    "sss",
    "stylus",
    "xml",
    "svg",
    "javascriptreact",
    "typescriptreact"
  ],

  //! Directory Tree settings
  "dirTree.ignore": [
    "client/node_modules/",
    "client/.git/",
    "client/.github/",
    "client/.eslintrc.json",
    "client/package-lock.json",
    "server/node_modules/",
    "server/.git/",
    "server/.github/",
    "server/.eslintrc.json",
    "server/package-lock.json",
    ".git/",
    "node_modules/",
    ".github/",
    "/.eslintrc.json",
    "/package-lock.json"
  ],

  //! TypeScript settings
  "typescript.updateImportsOnFileMove.enabled": "always",

  //! Auto Close Tag settings
  "auto-close-tag.disableOnLanguage": ["typescript", "typescriptreact"],

  //! Console Ninja settings
  "console-ninja.featureSet": "Community",

  //! Tailwind CSS Intellisense settings
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "typescriptreact": "typescriptreact"
  },

  //! Project Manager settings
  "projectManager.git.baseFolders": ["C:\\Users\\Mehedi\\projects"],
}
